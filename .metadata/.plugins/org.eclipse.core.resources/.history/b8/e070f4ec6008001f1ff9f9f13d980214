package ncs.test5;

public class BookArrayTest {

	public static void main(String[] args) {
		Book[] bArray = new Book[3];
		bArray[0] = new Book("자바의 정석", "남궁성", 30_000, "도우출판", 0.1);
		bArray[1] = new Book("열혈강의 자바", "구정은", 29_000, "프리렉", 0.1);
		bArray[2] = new Book("자바의 정석", "금영욱", 30_000, "북스홈", 0.1);
		
		for(Book book : bArray) {
			String name = book.getTitle();
			String author = book.getAuthor();
			int price = book.getPrice();
			String publisher = book.getPublisher();
			double discountRate = book.getDiscountRate();
			System.out.println(name + author + price + publisher + discountRate);
		}
	}
	
}
