package ncs.test5;

public class Book {

// 필드
	private String title;
	private String author;
	private int price;
	private String publisher;
	private int discountRate;
	private int price2;
	
// 메서드
	// 기본 생성자
	public Book() {
		// Ctrl + Space
	}
	
	// 필수 생성자 // Alt + Shift + S + O
	public Book(String title, String author, int price, String publisher, int discountRate, int price2) {
		// super(); // 부모 클래스에서는 필요 없다.
		this.title = title;
		this.author = author;
		this.price = price;
		this.publisher = publisher;
		this.discountRate = discountRate;
		this.price2 = price2;
	}
	
	// Getter
	public String getTitle() {
		return title;
	}
	
	public String getAuthor() {
		return author;
	}
	
	public int getPrice() {
		return price;
	}
	
	public String getPublisher() {
		return publisher;
	}
	
	public int getDiscountRate() {
		return discountRate;
	}
	
	public int getPrice2() {
		return price2;
	}
	
	// Setter
	public void setTitle(String title) {
		this.title = title;
	}
	
	public void setAuthor(String author) {
		this.author = author;
	}
	
	public void setPrice(int price) {
		this.price = price;
	}
	
	public void setPublisher(String publisher) {
		this.publisher = publisher;
	}
	
	public void setDiscountRate(int discountRate) {
		this.discountRate = discountRate;
	}
	
	public void setPrice2(int price2) {
		this.price2 = price2;
	}
		
    // @Override String toString retun ""; // Alt + Shift + S + S
	@Override
	public String toString() {
		return title + ", " + author + ", " + publisher + ", " + price + "원, " + discountRate + "% 할인\n할인된 가격 : " + price2 + "원";
	}
	
}
